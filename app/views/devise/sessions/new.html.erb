<%provide(:title, resource_name)%>
<div class="container">
	<div class="row">
		<div id="userprofile" class="col-md-4">
			<p class="uppercase"><%= resource_name%> SIGN IN</p>
		</div>
	</div>
	<div class="row">
		<div id="admin_session_form" class="col-md-4">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true, :class=>'input-box' %></div>
			
			  <div><%= f.label :password %><br />
			  <%= f.password_field :password, :class=>'input-box' %></div>
			
			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me,:class=>'checkbox inline'%></div>
			  <% end -%>
			
			  <div><%= f.submit "Sign in",:class=>'btn pull-right' %></div>
			<% end %>
			<%# if params[:uber_admin] %>
				<%#= render "devise/shared/links" %>
			<%# end %>
		</div>
	</div>
</div>	